{
  "compilerOptions": {
    /* Language & environment */
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "useDefineForClassFields": true,

    /* Modules */
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* JSX */
    "jsx": "react-jsx",

    /* Strictness */
    "strict": true,
    "skipLibCheck": true,

    /* Paths (THIS FIXES THE ERROR) */
      "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"]
}
